<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:id="@+id/full_screen_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autorisation obligatoire"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/full_screen_settings_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L'autorisation plein ecran est obligatoire pour recevoir les appels. Veuillez l'activer dans les reglages."
        android:textSize="16sp"
        android:paddingBottom="24dp"
        android:gravity="center" />

    <Button
        android:id="@+id/full_screen_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activer" />

</LinearLayout>
